 {# layaout.twig #}

<!DOCTYPE html>
<html>

<head>

    {% block head %}

    <meta charset="utf-8"/>
    <meta name="description" content="Proyecto de software" />
    <meta name="author" content="Grupo 64: Alejandro Alvarez Ferretti, Santiago Parini" />
    <title> {% block title %} Buffet UNLP inform√°tica {% endblock %} </title>
    <link rel="stylesheet" type="text/css" href="css/default.css">
    <link rel="stylesheet" type="text/css" href="css/barrasNavegacion.css">

    {% endblock %}

</head>

<body>

<header>
    {% block header %}
        <h1 class="headerTitle" id="headerTitle"> {{ config.titulo }}</h1>
        <p style="text-align: center"> {{ config.descripcion }} </p>
    {% endblock %}
</header>

<nav>
    {% block nav %}


    {% endblock %}
</nav>
{% if mensajeError %}
<div id="mensajeError">
    <p>

            {{ mensajeError }}

    </p>
</div>
{% endif %}
{% if (config.habilitado == 'false') and (not (rol == '0'))%}
    <main><p> {{ config.mensajeHabilitado }}</p></main>
{% else %}

    <main>
        {% block main %} {% endblock %}
    </main>
{% endif %}
<aside>

    {% block aside %} {% endblock %}

</aside>

<footer> {% block footer%} {{ config.mail }} {% endblock %}  </footer>


</body>


</html>